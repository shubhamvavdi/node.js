<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Folder Contents</title>
</head>
<body>
    <h1>Folder Contents</h1>
    <ul>
        <% files.forEach(file => { %>
            <li>
                <a href="/read-more/<%= file %>"><%= file %></a>
            </li>
        <% }) %>
    </ul>
    <h2>Add New File</h2>
    <form action="/add-file" method="POST">
        <input type="text" name="fileName" placeholder="File Name" required>
        <textarea name="fileContent" placeholder="File Content" required></textarea>
        <button type="submit">Submit</button>
    </form>
</body>
</html>
